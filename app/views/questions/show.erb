<div class="container">
  <h1><%= @question.title %></h1>

  <span class="question-date block font-3-4 c-lt-gray"><%= "Written on #{long_form_date(@question.created_at)}." %></span>

  <p><%= @question.text %></p>

  <div class="the_vote_buttons">
    <div class="upvote">
      <a href="/questions/<%=@question.id%>/upvote"><img class="vote_button" src="/images/upvote.jpg"></a>
    </div>
    <div class="vote_count">
      <%=@question.total_votes%>
    </div>
    <div class="downvote">
      <a href="/questions/<%=@question.id%>/downvote"><img class="vote_button" src="/images/downvote.jpg"></a>
    </div>
  </div>

  <div class="question_field">
    <ul class="no-bullets no-padding mar-t-2">
      <% if current_user && current_user.id == @question.user_id %>

        <li class="pipe-separate left">
          <a class="button" href="/questions/<%= @question.id %>/edit" >edit</a>
        </li><br>

        <li class="pipe-separate left">
          <form method="post" action="/questions/<%= @question.id %>" class="inline">
            <input type="hidden"  name="_method" value="delete">
            <input type="submit" class="button" value="delete">
          </form>
        </li>
      <% end %>

      <% if current_user && current_user.id != @question.user_id %>
        <li class="pipe-separate left">
          <a class="button" id="answer_button" href="/questions/<%= @question.id %>/answers/new">answer</a>
        </li>
    <% end %>
    </ul>


    <div class="comments">
      <ul>
        <% @question.comments.each do |comment| %>
          <li class="listing"><%=comment.text%><br> By: <a class="link" href="/users/<%=comment.user.id%>"><%=comment.user.username%></a> on <%=long_form_date(comment.created_at)%></li><br>
        <% end %>
      </ul>
      <a class="button some_margin" id="comment_button" href="/questions/<%=@question.id%>/comment/new">Comment</a>
    </div>
  </div>


  <h2> Answers </h2>
  <ul>

    <% @question.answers.sort_by{ |answer| answer.best ? 0 : 1}.each do |answer| %>

    <li class="listing">

    <div class="the_vote_buttons">
    <div class="upvote">
      <a href="/answers/<%=answer.id%>/upvote"><img class="vote_button" src="/images/upvote.jpg"></a>
    </div>
    <div class="vote_count">
      <%=answer.total_votes%>
    </div>
    <div class="downvote">
      <a href="/answers/<%=answer.id%>/downvote"><img class="vote_button" src="/images/downvote.jpg"></a>
    </div>
  </div>

    <div class="question_field">
      <% if answer.best %>
        <p>Best Answer!</p><br>
      <% end %>
    <%=answer.text%><br><br> By: <a class="link" href="/users/<%=answer.user.id%>"><%=answer.user.username%></a> Answered on: <%=long_form_date(answer.created_at)%>

      <% if current_user.id == @question.user_id && @best_values.exclude?(true) %>

        <a class="button some_margin" href="/answers/<%=answer.id %>/best">Mark as best answer</a>

      <% end %>


      <% if current_user && current_user.id == answer.user_id %>
        <ul class="some_padding">
          <li class="link"><a class="button" href="/answers/<%= answer.id %>/edit">edit</a></li><br>
          <li class="link">
            <form method="post" action="/answers/<%= answer.id %>" class="inline">
            <input type="hidden"  name="_method" value="delete">
            <input type="submit" class="button" value="delete">
            </form></li>
        </ul>
        <% end %>

        <ul class="some_padding">
          <% answer.comments.each do |comment| %>
            <li class="listing"><%=comment.text%><br> By: <a class="link" href="/users/<%=comment.user.id%>"><%=comment.user.username%></a> on <%=long_form_date(comment.created_at)%></li><br>
          <% end %>
        </ul>
      <br>
    <%if !answer.comments.empty? %>
      <a class="button some_margin" href="/answers/<%=answer.id%>/comment/new">Comment</a>
    <br><br>
    <% end %>
      </div>
      </li>
    <% end %>

  </ul>

  <%= erb :'_error' %>

</div>

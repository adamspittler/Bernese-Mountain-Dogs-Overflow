<div class="container">
  <h1><%= @question.title %></h1>

  <span class="question-date block font-3-4 c-lt-gray"><%= "Written on #{long_form_date(@question.created_at)}." %></span>

  <p><%= @question.text %></p>

  <% if current_user && current_user.id == @question.user_id %>
  <ul class="no-bullets no-padding mar-t-2">

      <li class="pipe-separate left">
        <a class="button" href="/questions/<%= @question.id %>/edit" >edit</a>
      </li>

      <li class="pipe-separate left">
        <form method="post" action="/questions/<%= @question.id %>" class="inline">
          <input type="hidden"  name="_method" value="delete">
          <input type="submit" class="button" value="delete">
        </form>
      </li>

    <% end %>

    <% if current_user && current_user.id != @question.user_id %>

      <li class="pipe-separate left">

        <a class="button" href="/questions/<%= @question.id %>/answers/new">answer</a>

      </li>

    <% end %>
  </ul>


  <div class="comments">
    <ul>
      <% @question.comments.each do |comment| %>
        <li><%=comment.text%><br> By: <a class="link" href="/users/<%=comment.user.id%>"><%=comment.user.username%></a> on <%=long_form_date(comment.created_at)%></li><br>
      <% end %>
    </ul>
    <a class="button" href="/questions/<%=@question.id%>/comment/new">Comment</a>
  </div>


  <h2> Answers </h2>
  <ul>
    <% @question.answers.each do |answer| %>

    <li><%=answer.text%><br><br> By: <a class="link" href="/users/<%=answer.user.id%>"><%=answer.user.username%></a> Answered on: <%=long_form_date(answer.created_at)%>
      <% if current_user.id == answer.user_id %>
        <ul>
          <li class="link"><a class="button" href="/answers/<%= answer.id %>/edit">edit</a></li>
          <li class="link">
            <form method="post" action="/answers/<%= answer.id %>" class="inline">
            <input type="hidden"  name="_method" value="delete">
            <input type="submit" class="button" value="delete">
            </form></li>
        </ul>
          <br><br>
        <ul>
          <% answer.comments.each do |comment| %>
            <li><%=comment.text%><br> By: <a class="link" href="/users/<%=comment.user.id%>"><%=comment.user.username%></a> on <%=long_form_date(comment.created_at)%></li><br>
          <% end %>
        </ul>
      <% end %>

    <a class="button" href="/answers/<%=answer.id%>/comment/new">Comment</a><br><br>

    <% end %>
  </ul>

</div>

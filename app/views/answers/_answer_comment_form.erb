<form method="post" action="/answers/comment">

    <label for="comment">Text:</label>
    <textarea rows="10" cols="50" name="comment[text]"></textarea>

    <input type="hidden" name="comment[user_id]" value="<%= current_user.id %>">
    <input type="hidden" name="comment[commentable_type]" value="Answer" >
    <input type="hidden" name="comment[commentable_id]" value="<%= @answer_id %>" ><br><br>
    <input type="submit" class="button" value="Create Comment">

</form>

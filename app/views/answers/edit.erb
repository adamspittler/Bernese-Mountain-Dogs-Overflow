<% if current_user.id == @answer.user_id %>
<div class="container">
  <form method="post" action="/answers/<%=@answer.id%>">
    <input type="hidden" name="_method" value="put">
    <label for="answer">Edit Your Answer:</label><br>
    <textarea rows="10" cols="50" name="answer[text]"><%=@answer.text%></textarea><br><br>

    <input type="submit" value="Edit" class="button">
</div>

<%= erb :'_error' %>

<% else %>
  <p>You cannot view this page GET OUT</p>
<% end %>
